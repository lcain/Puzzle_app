.map { 
  /*border: 2px solid black;*/
  position: absolute;
  top: 50%;
  left: 50%;
   /*bring your own prefixes */
  transform: translate(-50%, -50%);
}


.map.dropzone {
  opacity: 0.3;
}
.draggable {
  position: absolute;
  right: 0;
  bottom: 0;

